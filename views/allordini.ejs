<!DOCTYPE html>
<html lang="it">

<%- include("head") %>

    <body class="gradient-custom d-flex flex-column min-vh-100">
        <%- include("header", { authenticated, title, coach, Allordini }) %>
            <div class="container flex-grow-1 d-flex flex-column justify-content-center text-center">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <h4 class="mt-4 text-center">Benvnuto coach qui puoi vedere tutti gli ordini</h4>
                        <% if (Allordini && Allordini.length> 0) { %>
                            <div class="row justify-content-center">
                                <% Allordini.forEach((ordine)=> { %>
                                    <div id="card-ordine" class="p-3 col-md-6 col-lg-4">
                                        <div class="card mb-4">
                                            <div class="card-body">
                                                <h5 class="card-title">Numero di ordine: 00000<%= ordine.ID %>
                                                </h5>
                                                <p>Utente : <%= ordine.id_utente %>
                                                </p>
                                                <% if (ordine.Prezzo !==undefined) { %>
                                                    <p class="card-text">Totale speso: â‚¬<%= ordine.Prezzo.toFixed(2) %>
                                                    </p>
                                                    <% } else { %>
                                                        <p class="card-text">Totale speso: Prezzo non disponibile</p>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } else { %>
                                <p>Nessun ordine trovato.</p>
                                <% } %>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <%- include("footer") %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>