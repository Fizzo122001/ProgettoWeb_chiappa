<!DOCTYPE html>
<html lang="it">
<head>
    <%- include("head") %>
    <link rel="stylesheet" href="/css/caroselloHome.css">
</head>
<body class="gradient-custom d-flex flex-column min-vh-100">
    <%- include("header", { authenticated, title, coach, ordini }) %>
    <div class="container flex-grow-1 d-flex flex-column justify-content-center text-center">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="mt-4 text-center">I tuoi ordini</h1>
                <% if (ordini && ordini.length > 0) { %>
                    <% ordini.forEach((ordine) => { %>
                        <div id="card-ordine" class="p-3 col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title"><%= ordine.id %></h4>
                                    <% if (ordine.prezzo !== undefined) { %>
                                        <p class="card-text">Prezzo: â‚¬<%= ordine.prezzo.toFixed(2) %></p>
                                    <% } else { %>
                                        <p class="card-text">Prezzo: Prezzo non disponibile</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>Nessun ordine trovato.</p>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <%- include("footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
