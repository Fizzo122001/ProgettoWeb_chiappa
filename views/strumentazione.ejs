<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/header.css"> 
    <link rel="stylesheet" href="/css/prod2.css">  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Strumentazione</title>
    <style>
        .carousel-inner {
            margin: 50px auto;
            width: 800px; 
        }
        .carousel-item img {
            max-width: 100%; 
            height: auto; 
        }

    </style>
</head>
<body>
    <%- include("header.ejs") %>
    <div class="container">
        <div class="page-title">Esplora le nostre attrezzature fitness, scorrendo il carosello</div>
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" data-bs-interval="6000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/image/tapis.jpg" class="d-block w-100" alt="Errore nell'immagine">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Tapis roulant</h5>
                        <p>Prezzo: 5.00 euro/h</p>
                        <a href="#" onclick="aggiungi(4, 'Tapis roulant', 5.00)">Aggiungi al carrello</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/image/cyclette.jpg" class="d-block w-100" alt="Errore nell'immagine">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>cyclette</h5>
                        <p>Prezzo: 3.00 euro/h</p>
                        <a href="#" onclick="aggiungi(5, 'Cyclette', 3.00)">Aggiungi al carrello</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/image/pesi.jpg" class="d-block w-100" alt="Errore nell'immagine">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Pesi</h5>
                        <p>Prezzo: 2.00 euro/h</p>

                        <a href="#" onclick="aggiungi(6, 'Pesi', 2.00)">Aggiungi al carrello</a>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <script src="js/aggiungi.js"></script>
</body>
