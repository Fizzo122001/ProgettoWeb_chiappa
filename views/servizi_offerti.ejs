<!DOCTYPE html>
<html lang="it">

<head>
    <%- include("head") %>
</head>

<body class="gradient-custom d-flex flex-column min-vh-100">
    <%- include("header", { authenticated, title, servizi, coach ,id_utente}) %>
    <div class="container flex-grow-1 d-flex flex-column justify-content-center text-center">
        <h4 class="page-title text-center">Servizi Offerti</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4 text-center">
            <% servizi.forEach(servizio => { %>
                <div class="col">
                    <div class="product-container mt-3 p-3 d-flex flex-column justify-content-between h-100">
                        <h4>
                            <%= servizio.nome %>
                        </h4>
                        <p>
                            <%= servizio.descrizione %>
                        </p>
                        <img src="<%= servizio.immagine %>" class="img-fluid" alt="Errore immagine">
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <p class="mb-0">
                                Posti disponibili: <%= servizio.posti_disponibili %>
                            </p>
                            <form action="/servizi_offerti/prenotati" method="post" class="mb-0">
                                <button type="submit" class="btn btn-warning">Prenotati</button>
                                <input type="hidden" name="id_servizio" value="<%= servizio.ID %>">
                                <input type="hidden" name="id_utente" value="<%= id_utente %>">
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include("footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>

</html>
