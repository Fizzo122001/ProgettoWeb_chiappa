<!DOCTYPE html>
<html lang="it">
<head>
    <%- include("head") %>
</head>
<body class="gradient-custom d-flex flex-column min-vh-100">
    <%- include("header", { authenticated, title, coach, Allprenotazioni }) %>
    <div class="container flex-grow-1 d-flex flex-column justify-content-center text-center">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <h4 class="mt-4 text-center">Qui puoi vedere tutti i servizi prenotati dagli utenti</h4>
                <% if (Allprenotazioni.length > 0) { %>
                    <div class="row justify-content-center">
                        <% Allprenotazioni.forEach((prenotati) => { %>
                            <div id="card-ordine" class="p-3 col-md-6 col-lg-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Numero di prenotazione: 00000<%= prenotati.ID %></h5>
                                        <p>Utente : <%= prenotati.ID_utente %></p>
                                        <% if (prenotati.ID !== undefined) { %>
                                            <p class="card-text">Servizio prenotato: <%= prenotati.ID_servizio %></p>
                                        <% } else { %>
                                            <p class="card-text">Servizio non disponibile</p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p>Nessun servizio trovato.</p>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <%- include("footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
